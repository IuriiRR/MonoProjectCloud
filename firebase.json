{
    "firestore": {
      "rules": "firestore.rules"
    },
    "hosting": {
      "public": "frontend/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    },
    "emulators": {
      "firestore": {
        "host": "0.0.0.0",
        "port": 8080
      },
      "auth": {
        "host": "0.0.0.0",
        "port": 9099
      },
      "ui": {
        "enabled": true,
        "host": "0.0.0.0",
        "port": 4000
      },
      "hub": {
        "host": "0.0.0.0",
        "port": 4400
      }
    }
  }