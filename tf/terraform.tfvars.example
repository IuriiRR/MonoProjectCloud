project_id   = "your-gcp-project-id"
region       = "europe-west1"
function_name = "users-api"
accounts_function_name = "accounts-api"
transactions_function_name = "transactions-api"
sync_worker_function_name = "sync-worker"
sync_transactions_function_name = "sync-transactions"

# Must be globally unique
bucket_name  = "your-gcp-project-id-functions-src"

# Optional but recommended (needed if you want Terraform to enable Google sign-in via Identity Platform).
# Create an OAuth 2.0 Client ID in Google Cloud Console (APIs & Services -> Credentials) and paste values here.
google_oauth_client_id     = "YOUR_OAUTH_CLIENT_ID.apps.googleusercontent.com"
google_oauth_client_secret = "YOUR_OAUTH_CLIENT_SECRET"

# Shared internal key used by sync_* functions when calling HTTP APIs.
# Pick a strong random value for production.
internal_api_key = "change-me"

# Auth mode for HTTP APIs: "enabled" (prod) or "disabled" (dev-only).
auth_mode = "enabled"


